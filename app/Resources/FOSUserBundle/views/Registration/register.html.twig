{% trans_default_domain 'FOSUserBundle' %}

{% extends "@FOSUser/layout.html.twig" %}

{% block fos_user_content %}

    <div class="container container-user">

        <form action="{{ path('fos_user_registration_register') }}" method="post">

            <div class="register-form">

                <div class="form-group contact-input">
                    {{ form_widget(form.firstname) }}
                    {{ form_errors(form.firstname) }}
                </div>

                <div class="form-group contact-input">
                    {{ form_widget(form.name) }}
                    {{ form_errors(form.name) }}
                </div>

                <div class="form-group contact-input">
                    {{ form_widget(form.email) }}
                    {{ form_errors(form.email) }}
                </div>

                <div class="form-group contact-input">
                    {{ form_widget(form.plainPassword) }}
                    {{ form_errors(form.plainPassword) }}
                </div>

                <div class="form-group contact-input">
                    {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control input-lg', 'placeholder': 'Choisissez un mot de passe'}}) }}
                    {{ form_errors(form.plainPassword.first) }}
                </div>

                <div class="form-group contact-input">
                    {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control input-lg', 'placeholder': 'Confirmez votre mot de passe'}}) }}
                    {{ form_errors(form.plainPassword.second) }}
                </div>

                <input type="submit" value="{{ 'registration.submit'|trans }}" class="btn btn-primary btn-lg"/>

            </div>

            {{ form_end(form) }}

        </form>

    </div>

{% endblock fos_user_content %}
