{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h2>Résultats de votre recherche</h2>


        <div class="row">
            {% for advert in adverts %}
                <div class="col-md-4 col-xs-12">
                    <div class="thumbnail">
                        <img src="https://media.giphy.com/media/11Je0AsIHE2TW8/giphy.gif" alt="placeholder" width="100%">
                        {#<img src="{{ advert.picture }}">#}
                        <div class="caption">
                            <h3>{{ advert.title }}</h3>
                            <p class="type">{{ advert.type }}</p>
                            <p>{{ advert.price }}€/heure</p>
                            <p class="text-right">{{ advert.address }}</p>
                             {#{{ advert.rate }}</p>#}
                        </div>
                    </div>
                    <button class="btn btn-primary">Voir l'annonce</button>
                </div>
            {% endfor %}
        </div>


    </div>
{% endblock %}